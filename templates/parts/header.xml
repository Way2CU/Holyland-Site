<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<header
		class="$section == 'home' ? 'home' : false"
		cms:optional="class"
		>

		<div id="top_menu">
			<div class="inner_wrap">
					<a
						href="url_Make('', 'home')"
						class="logo"
						cms:eval="href"
						>
							<img
								src="_BASEURL.'/site/images/logo-yellow.svg'"
								alt="logo"
								cms:eval="src"
							/>
					</a>	
					<!-- Main menu -->
					<nav id="main">
						<cms:template file="parts/main_menu.xml"/>
					</nav>
					<a
						 href="url_Make('', 'Purchase')"
						 cms:eval="href"
						 eval="href" 
						 class="cart"
					>
					<img
						src="_BASEURL.'/site/images/cart.svg'"
						alt="cart"
						cms:eval="src"
					/>
				</a>
				<a
					href="url_Make('', 'Purchase')"
					cms:eval="href"
					 class="cart"
					 eval="href" 
				>
					<cms:text constant="Get_Started"/>
				</a>
			</div>
		</div>
		<cms:if section="home">
			<div class="inner_wrap center">
				<h1>
					<span><cms:text constant="purchase_piece"/></span>
					<cms:text constant="in_holyland"/>
				</h1>
				<div class="call_to_action">
					<a
						 href=""
						 eval="href" 
					>
						<cms:text constant="for_myself"/>
					</a>

					<a
						 href=""
						 eval="href" 
					>
						<cms:text constant="as_gift"/>
					</a>
				</div>
				<span><cms:text constant="limited_number"/></span>
				<span><cms:text constant="best_package"/></span>
			</div>
	</cms:if>

	</header>
</document>
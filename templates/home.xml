<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header class="home">
				<cms:template file="parts/header.xml"/>
			</header>

			<div class="wrap white">
				<div class="inner_wrap">
					<div class="pricing_container">
						<cms:module
							name="articles"
							action="show_list"
							group="pricing_table"
							template="parts/pricing.xml"
						/>
					</div>
					<div class="location_container">
						<cms:module
							name="articles"
							action="show"
							text_id="location_text"
						/>
						<span><cms:text constant="get_piece"/></span>
						<div class="call_to_action">
							<a
								 href=""
								 eval="href" 
							>
								<cms:text constant="Get_Started"/>
							</a>

							<a
								 href=""
								 eval="href" 
							>
								<cms:text constant="See_packages_prices"/>
							</a>
						</div>
					</div>
				</div>
			</div>

			<div class="wrap video">
				<div class="inner_wrap">
					<span><cms:text constant="watch_video"/></span>
					<cms:module
						name="youtube"
						action="show"
						text_id="homepage_video"
						embed="1"
						width="900"
						height="600"
						target="video_player"
						theme="light"
						autohide="1"
					/>
				</div>
			</div>

			<div class="wrap white area">
				<div class="inner_wrap">
					<span><cms:text constant="amazing_places_land"/></span>
					<cms:module
						name="articles"
						action="show_list"
						group="area_home"
						template="parts/area.xml"
					/>
				</div>
			</div>

			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
